<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="project_user_story_criteria_type_tree" model="ir.ui.view">
            <field name="name">project.user.story.criteria.type.tree</field>
            <field name="model">project.user.story.criteria.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom" default_order="name">
                    <field name="name" />
                    <field name="must_create_task" widget="boolean_toggle" />
                    <field name="color" widget="color_picker" />
                </tree>
            </field>
        </record>


        <record id="project_user_story_criteria_type_action" model="ir.actions.act_window">
            <field name="name">Criteria Types</field>
            <field name="res_model">project.user.story.criteria.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
